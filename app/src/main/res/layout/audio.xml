<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:text="耳机是否有声音"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/hpyes"
            android:layout_weight="6"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是"
            android:onClick="auClick"/>
        <Button
            android:id="@+id/hpno"
            android:layout_weight="6"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="否"
            android:onClick="auClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/hp"
        android:id="@+id/spk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:text="喇叭是否有声音"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/spkyes"
            android:layout_weight="6"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="是"
            android:onClick="auClick"/>
        <Button
            android:id="@+id/spkno"
            android:layout_weight="6"
            android:textSize="@dimen/audioTextSize"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="否"
            android:onClick="auClick"/>
    </LinearLayout>
    <Button
        android:layout_below="@+id/spk"
        android:id="@+id/reTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新测试"
        android:textSize="@dimen/audioTextSize"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/nextTest"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:text="进行下一项测试"
        android:textSize="@dimen/ClickBoxTextSize"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>